<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        .cart-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 40px 20px;
            min-height: 70vh;
        }

        .cart-header {
            text-align: center;
            margin-bottom: 40px;
        }

        .cart-header h1 {
            font-size: 2.5em;
            color: var(--gray-900);
            margin-bottom: 10px;
        }

        .cart-header p {
            color: var(--gray-600);
            font-size: 1.1em;
        }

        .cart-content {
            display: grid;
            grid-template-columns: 2fr 1fr;
            gap: 40px;
        }

        .cart-items {
            background: var(--white);
            border-radius: var(--radius-xl);
            padding: 30px;
            box-shadow: var(--shadow-lg);
            border: 1px solid var(--gray-100);
        }

        .cart-item {
            display: grid;
            grid-template-columns: 150px 1fr auto;
            gap: 20px;
            padding: 20px;
            border: 1px solid var(--gray-200);
            border-radius: var(--radius-lg);
            margin-bottom: 20px;
            background: var(--gray-50);
            transition: all var(--transition-normal);
        }

        .cart-item:hover {
            box-shadow: var(--shadow-md);
        }

        .cart-item-image img {
            width: 100%;
            height: 100px;
            object-fit: cover;
            border-radius: var(--radius-lg);
        }

        .cart-item-details h3 {
            font-size: 1.3em;
            color: var(--gray-900);
            margin-bottom: 10px;
        }

        .cart-item-info {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 15px;
            margin-bottom: 10px;
        }

        .info-item {
            display: flex;
            align-items: center;
            gap: 8px;
            color: var(--gray-600);
            font-size: 0.9em;
        }

        .info-item i {
            color: var(--primary-blue);
            width: 16px;
        }

        .cart-item-price {
            text-align: right;
        }

        .price-per-day {
            color: var(--gray-600);
            font-size: 0.9em;
            margin-bottom: 5px;
        }

        .total-days {
            color: var(--gray-700);
            font-weight: 600;
            margin-bottom: 10px;
        }

        .total-price {
            font-size: 1.4em;
            font-weight: bold;
            color: var(--success);
        }

        .remove-btn {
            background: var(--error);
            color: var(--white);
            border: none;
            padding: 8px 15px;
            border-radius: var(--radius-md);
            cursor: pointer;
            font-size: 0.9em;
            margin-top: 10px;
            transition: all var(--transition-normal);
        }

        .remove-btn:hover {
            background: #dc2626;
            transform: translateY(-1px);
        }

        .cart-summary {
            background: var(--white);
            border-radius: var(--radius-xl);
            padding: 30px;
            box-shadow: var(--shadow-lg);
            border: 1px solid var(--gray-100);
            height: fit-content;
            position: sticky;
            top: 20px;
        }

        .summary-title {
            font-size: 1.5em;
            color: var(--gray-900);
            margin-bottom: 20px;
            text-align: center;
        }

        .summary-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 15px;
            color: var(--gray-700);
        }

        .summary-total {
            display: flex;
            justify-content: space-between;
            font-size: 1.3em;
            font-weight: bold;
            color: var(--gray-900);
            border-top: 2px solid var(--gray-200);
            padding-top: 15px;
            margin-top: 20px;
        }

        .checkout-btn {
            width: 100%;
            background: linear-gradient(135deg, var(--success), #059669);
            color: var(--white);
            border: none;
            padding: 15px 25px;
            border-radius: var(--radius-lg);
            font-size: 1.1em;
            font-weight: 600;
            cursor: pointer;
            margin-top: 20px;
            transition: all var(--transition-normal);
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }

        .checkout-btn:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow-lg);
        }

        .clear-cart-btn {
            width: 100%;
            background: var(--error);
            color: var(--white);
            border: none;
            padding: 10px 20px;
            border-radius: var(--radius-lg);
            font-size: 0.9em;
            cursor: pointer;
            margin-top: 10px;
            transition: all var(--transition-normal);
        }

        .clear-cart-btn:hover {
            background: #dc2626;
        }

        .empty-cart {
            text-align: center;
            padding: 60px 20px;
            color: var(--gray-600);
        }

        .empty-cart i {
            font-size: 4em;
            color: var(--gray-400);
            margin-bottom: 20px;
        }

        .continue-shopping-btn {
            background: var(--primary-blue);
            color: var(--white);
            text-decoration: none;
            padding: 12px 25px;
            border-radius: var(--radius-lg);
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 10px;
            margin-top: 20px;
            transition: all var(--transition-normal);
        }

        .continue-shopping-btn:hover {
            background: var(--primary-light);
            transform: translateY(-2px);
        }

        @media (max-width: 768px) {
            .cart-content {
                grid-template-columns: 1fr;
                gap: 30px;
            }

            .cart-item {
                grid-template-columns: 1fr;
                text-align: center;
            }

            .cart-item-info {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body data-page="cart">
    <%- include('../partials/header') %>

    <main class="cart-container">
        <div class="cart-header">
            <h1><i class="fas fa-shopping-cart"></i> Shopping Cart</h1>
            <p>Review your selected cars and proceed to checkout</p>
        </div>

        <% if (cart.items && cart.items.length > 0) { %>
            <div class="cart-content">
                <div class="cart-items">
                    <% cart.items.forEach(item => { %>
                        <div class="cart-item" data-item-id="<%= item._id %>">
                            <div class="cart-item-image">
                                <img src="<%= item.car.image %>" alt="<%= item.car.brand %> <%= item.car.model %>">
                            </div>
                            
                            <div class="cart-item-details">
                                <h3><%= item.car.brand %> <%= item.car.model %></h3>
                                <div class="cart-item-info">
                                    <div class="info-item">
                                        <i class="fas fa-calendar-check"></i>
                                        <span>Pickup: <%= new Date(item.pickupDate).toLocaleDateString() %></span>
                                    </div>
                                    <div class="info-item">
                                        <i class="fas fa-calendar-times"></i>
                                        <span>Return: <%= new Date(item.returnDate).toLocaleDateString() %></span>
                                    </div>
                                    <div class="info-item">
                                        <i class="fas fa-map-marker-alt"></i>
                                        <span>Location: <%= item.pickupLocation %></span>
                                    </div>
                                    <div class="info-item">
                                        <i class="fas fa-clock"></i>
                                        <span><%= item.totalDays %> day<%= item.totalDays > 1 ? 's' : '' %></span>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="cart-item-price">
                                <div class="price-per-day">$<%= item.car.price %>/day</div>
                                <div class="total-days"><%= item.totalDays %> day<%= item.totalDays > 1 ? 's' : '' %></div>
                                <div class="total-price">$<%= item.totalPrice %></div>
                                <button class="remove-btn" onclick="removeFromCart('<%= item._id %>')">
                                    <i class="fas fa-trash"></i> Remove
                                </button>
                            </div>
                        </div>
                    <% }); %>
                </div>

                <div class="cart-summary">
                    <h3 class="summary-title">Order Summary</h3>
                    
                    <div class="summary-row">
                        <span>Items in cart:</span>
                        <span><%= cart.items.length %></span>
                    </div>
                    
                    <div class="summary-row">
                        <span>Total days:</span>
                        <span><%= cart.items.reduce((sum, item) => sum + item.totalDays, 0) %></span>
                    </div>
                    
                    <div class="summary-total">
                        <span>Total Amount:</span>
                        <span>$<%= cart.totalAmount %></span>
                    </div>
                    
                    <button class="checkout-btn" onclick="proceedToPayment()">
                        <i class="fas fa-credit-card"></i>
                        Proceed to Payment
                    </button>
                    
                    <button class="clear-cart-btn" onclick="clearCart()">
                        <i class="fas fa-trash-alt"></i>
                        Clear Cart
                    </button>
                </div>
            </div>
        <% } else { %>
            <div class="empty-cart">
                <i class="fas fa-shopping-cart"></i>
                <h2>Your cart is empty</h2>
                <p>Browse our collection of cars and add some to your cart!</p>
                <a href="/" class="continue-shopping-btn">
                    <i class="fas fa-car"></i>
                    Browse Cars
                </a>
            </div>
        <% } %>
    </main>

    <%- include('../partials/footer') %>

    <script>
        async function removeFromCart(itemId) {
            if (!confirm('Are you sure you want to remove this item from your cart?')) {
                return;
            }

            try {
                const response = await fetch(`/cart/remove/${itemId}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                const result = await response.json();

                if (result.success) {
                    // Remove the item from the page
                    document.querySelector(`[data-item-id="${itemId}"]`).remove();
                    
                    // Update cart count in header if function exists
                    if (typeof updateCartCount === 'function') {
                        updateCartCount(result.cartItemsCount);
                    }
                    
                    // Reload page if cart is empty
                    if (result.cartItemsCount === 0) {
                        location.reload();
                    } else {
                        // Update total amount
                        document.querySelector('.summary-total span:last-child').textContent = `$${result.totalAmount}`;
                        document.querySelector('.summary-row:first-child span:last-child').textContent = result.cartItemsCount;
                    }
                    
                    showSuccessMessage(result.message);
                } else {
                    showErrorMessage(result.error);
                }
            } catch (error) {
                console.error('Remove from cart error:', error);
                showErrorMessage('Failed to remove item from cart');
            }
        }

        async function clearCart() {
            if (!confirm('Are you sure you want to clear your entire cart?')) {
                return;
            }

            try {
                const response = await fetch('/cart/clear', {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                const result = await response.json();

                if (result.success) {
                    location.reload();
                } else {
                    showErrorMessage(result.error);
                }
            } catch (error) {
                console.error('Clear cart error:', error);
                showErrorMessage('Failed to clear cart');
            }
        }

        function proceedToPayment() {
            // Redirect to payment page
            window.location.href = '/payment/checkout';
        }

        function showSuccessMessage(message) {
            // Create and show success message
            const messageDiv = document.createElement('div');
            messageDiv.className = 'alert alert-success';
            messageDiv.innerHTML = `<i class="fas fa-check-circle"></i> ${message}`;
            messageDiv.style.cssText = `
                position: fixed;
                top: 20px;
                right: 20px;
                background: var(--success);
                color: white;
                padding: 15px 20px;
                border-radius: 8px;
                z-index: 1000;
                display: flex;
                align-items: center;
                gap: 10px;
                box-shadow: var(--shadow-lg);
            `;
            
            document.body.appendChild(messageDiv);
            
            setTimeout(() => {
                messageDiv.remove();
            }, 5000);
        }

        function showErrorMessage(message) {
            // Create and show error message
            const messageDiv = document.createElement('div');
            messageDiv.className = 'alert alert-error';
            messageDiv.innerHTML = `<i class="fas fa-exclamation-circle"></i> ${message}`;
            messageDiv.style.cssText = `
                position: fixed;
                top: 20px;
                right: 20px;
                background: var(--error);
                color: white;
                padding: 15px 20px;
                border-radius: 8px;
                z-index: 1000;
                display: flex;
                align-items: center;
                gap: 10px;
                box-shadow: var(--shadow-lg);
            `;
            
            document.body.appendChild(messageDiv);
            
            setTimeout(() => {
                messageDiv.remove();
            }, 5000);
        }
    </script>
</body>
</html> 